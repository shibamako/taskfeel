<%= form_with(model: @task) do |form| %>

<div class="field">
  <div class="col-2"><%= form.label :id %></div>
  <div class="col-2"><%= form.text_field :id, :disabled => true, :class => "form-control" %></div>
</div>

  <div class="field">
    <div class="col-2"><%= form.label :title %></div>
    <div class="col-6"><%= form.text_field :title, :disabled => true, :class => "form-control" %></div>
  </div>

  <div class="field">
    <div class="col-2"><%= form.label :appointed %></div>
    <div class="col-2"><%= form.date_field :appointed, :disabled => true, :class => "form-control" %></div>
  </div>

  <div class="field">
    <div class="col-2"><%= form.label :priority %></div>
    <div class="col-2"><%= form.collection_select :priority, Priority.where(mukou: true).order(:serialize), :id, :priority_item, {:prompt => true}, {:class => "form-control", :disabled => true} %></div>
  </div>

  <div class="field">
    <div class="col-2"><%= form.label :username %></div>
    <div class="col-2"><%= form.collection_select :username, User.where(is_deleted: true), :id, :name, {:prompt => true}, {:class => "form-control", :disabled => true} %></div>
  </div>

  <div class="field">
    <div class="col-2"><%= form.label :category %></div>
    <div class="col-2"><%= form.collection_select :category, Category.where(mukou: true).order(:serialize), :id, :category_item, {:prompt => true}, {:class => "form-control", :disabled => true} %></div>
  </div>

  <div class="field">
    <div class="col-2"><%= form.label :status %></div>
    <div class="col-2"><%= form.collection_select :status, Status.where(mukou: true).order(:serialize), :id, :status_item, {:prompt => true}, {:class => "form-control", :disabled => true} %></div>
  </div>

  <div class="field">
    <div class="col-2"><%= form.label :memo %></div>
    <div class="col-4"><%= form.text_area :memo, :disabled => true, :class => "form-control", :size => "10x5" %></div>
  </div>

  <%= link_to t('.back', :default => t("helpers.links.back")),
                tasks_path, :class => 'btn btn-dark'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_task_path(@task), :class => 'btn btn-secondary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                task_path(@task),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
<% end %>
